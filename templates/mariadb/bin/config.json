{
    "command": "/usr/libexec/mysqld --user=mysql",
    "config_files": [
        {
            "source": "/var/lib/config-data/galera.cnf",
            "dest": "/etc/my.cnf.d/galera.cnf",
            "owner": "mysql",
            "perm": "0600"
        },
        {
            "source": "/var/lib/tls-data/tls.key",
            "dest": "/etc/pki/tls/private/mariadb.key",
            "owner": "mysql",
            "perm": "0600",
            "optional": true
        },
        {
            "source": "/var/lib/tls-data/tls.crt",
            "dest": "/etc/pki/tls/certs/mariadb.crt",
            "owner": "mysql",
            "perm": "0600",
            "optional": true
        },
        {
            "source": "/var/lib/tlsca-data/ca.crt",
            "dest": "/etc/pki/tls/certs/mariadbca.crt",
            "owner": "mysql",
            "perm": "0600",
            "optional": true
        }
    ]
}
